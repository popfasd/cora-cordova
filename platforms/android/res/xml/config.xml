<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.fasdoutreach.cora" version="1.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <name>Cora</name>
    <description>
        A mobile app for teachers to record observations in the classroom
    </description>
    <author email="cora@fasdoutreach.ca" href="https://cora.fasdoutreach.ca">
        POPFASD
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/assets/images/ios-icon-1024x1024.png" />
</widget>
